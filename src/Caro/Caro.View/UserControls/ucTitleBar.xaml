<UserControl x:Class="Caro.View.ucTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Caro.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Image Source="/Caro.View;component/Resources/icon.ico" Width="25" Height="25" Stretch="Fill" VerticalAlignment="Center" Margin="5, 0"/>
        <TextBlock Grid.Column="0" FontSize="14" FontWeight="Bold" Foreground="BlueViolet" Text="Caro" VerticalAlignment="Center" Margin="10, 0" />
    </StackPanel>
</UserControl>
