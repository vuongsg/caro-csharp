        <Image HorizontalAlignment="Left" Height="143" Margin="53,278,0,0" VerticalAlignment="Top" Width="459"
                     Source="/Caro.View;component/Resources/imgSplash.png" Stretch="Fill" />
    </Grid>
</Window>